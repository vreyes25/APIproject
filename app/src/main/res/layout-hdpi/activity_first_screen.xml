<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_screens_background_low"
    tools:context=".FirstScreen">

    <TextView
        android:id="@+id/txt_days"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/archivoblack"
        android:gravity="center"
        android:onClick="galleryScreen"
        android:text="@string/daysCounter"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/archivoblack"
        android:gravity="center"
        android:onClick="galleryScreen"
        android:text="@string/textLength"
        android:textColor="#8782C8"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="55dp"
        android:contentDescription="@string/backArrow"
        android:onClick="lessCounter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/back_arrow" />

    <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="55dp"
        android:contentDescription="@string/backArrow"
        android:onClick="plusCounter"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/back_arrow" />

    <TextView
        android:id="@+id/txt_earth"
        android:layout_width="127dp"
        android:layout_height="38dp"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="360dp"
        android:fontFamily="@font/archivoblack"
        android:gravity="center"
        android:onClick="galleryScreen"
        android:rotation="90"
        android:text="@string/textViewEarth"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/firstTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sanchez_regular2"
        android:text="@string/firstScreenTitle"
        android:textColor="#C4C4C4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_home"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_first_screen"
        android:fontFamily="@font/archivoblack"
        android:gravity="center"
        android:onClick="homeScreen"
        android:text="@string/textviewGallery"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_gallery"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_first_screen"
        android:fontFamily="@font/archivoblack"
        android:gravity="center"
        android:onClick="galleryScreen"
        android:text="@string/textviewGallery"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/decorativeLine"
        android:layout_width="10dp"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/decorativeLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/decorativeline" />

    <ImageView
        android:id="@+id/earthPicture"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginBottom="135dp"
        android:contentDescription="@string/earthPicture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/earthimage" />

    <ImageView
        android:id="@+id/earthShadow"
        android:layout_width="242dp"
        android:layout_height="237dp"
        android:layout_marginBottom="152dp"
        android:contentDescription="@string/earthShadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/shadowearth" />

</androidx.constraintlayout.widget.ConstraintLayout>